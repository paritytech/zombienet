{
  "root": true,
  "env": {
    "node": true,
    "commonjs": true,
    "mocha": true,
    "es2021": true
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": ["./tsconfig.json", "javascript/*/tsconfig.json"]
      }
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {},
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/no-var-requires": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "semi": [2, "always"],
    "no-shadow": "off",
    "no-console": "off",
    "no-async-promise-executor": "off"
  }
}
