{
  "name": "zombienet",
  "version": "1.1.3",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Javier Viola <javier@parity.io>",
  "license": "MIT",
  "scripts": {
    "_prepare": "tsc",
    "clean": "rm -rf ./dist/* ",
    "build": "tsc",
    "start": "yarn build && node dist/cli.js",
    "lint": "npx prettier --write .",
    "package": "pkg . --out-path ./bins"
  },
  "dependencies": {
    "@polkadot/api": "^6.1.2",
    "@polkadot/keyring": "^7.4.1",
    "@polkadot/util-crypto": "^7.4.1",
    "axios": "^0.24.0",
    "chai": "^4.3.4",
    "commander": "^8.2.0",
    "debug": "^4.3.2",
    "execa": "^5.1.1",
    "mocha": "^9.1.2",
    "tmp-promise": "^3.0.2",
    "toml": "^3.0.0",
    "yaml": "^2.0.0-9"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "zombienet": "dist/cli.js"
  },
  "pkg": {
    "assets": [
      "node_modules/@polkadot/**/*",
      "node_modules/@babel/**/*",
      "static-configs/*",
      "scripts/*"
    ],
    "targets": [
      "node14-macos-x64",
      "node14-linux-x64"
    ]
  },
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.4.12",
    "@types/tmp": "^0.2.1",
    "pkg": "~5.5.1",
    "prettier": "2.2.1",
    "typescript": "^4.1.5",
    "yarn": "^1.22.10"
  }
}
